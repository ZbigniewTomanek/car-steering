#:kivy 1.0.9


<Car>:
    size: 32, 15
	visible: True
	
	size_hint_x: 1 if self.visible else 0
	opacity: 1 if self.visible else 0
	disabled: not self.visible
			
    canvas:
        Rectangle:
			source: 'car.png'
            pos: self.pos
            size: self.size
	canvas.before:
		PushMatrix
		Rotate:
			angle: self.angle
			origin: root.center
    canvas.after:
        PopMatrix


<CarSimulation>:
	car: car
	
	keep_data: True

	Car:
		id: car
		center: self.parent.center
		
	Label:
		text: '' if not root.pid else 'kp: ' + str(round(root.kp, 5))
		center_x: root.width * 1/10
        top: root.top - 10
	
	Label:
		text: '' if not root.pid else 'ki: ' + str(round(root.ki, 5))
		center_x: root.width * 2/10
        top: root.top - 10
		
	Label:

		text: '' if not root.pid else 'kd: ' + str(round(root.kd, 5))
		center_x: root.width * 3/10
        top: root.top - 10
	
	
		
